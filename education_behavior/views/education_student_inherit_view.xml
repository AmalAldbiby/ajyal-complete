<odoo>
    <!--Inheriting education student form view for adding behavior smart button-->
    <record id="education_student_tree_inherit_behavior" model="ir.ui.view">
        <field name="name">
            education.student.form.inherit.education.behavior
        </field>
        <field name="model">education.student</field>
        <field name="inherit_id"
               ref="education_core.education_student_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button"
                    type="action"
                    name="%(education_behavior.education_behavior_for_student_action)d">
                    <field string="Behavior and Discipline" name="behavior_count" widget="statinfo"/>
                </button>
            </xpath>
        </field>
    </record>
</odoo>